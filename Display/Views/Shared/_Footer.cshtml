<div class='wrapper' id='footerwrap'>
    <div id='footer'>
        <div class="box box_mini">
            <h4>
                Latest News</h4>
            <ul>
                @{
                    
                    var postRepository = new Display.Data.PostRepository();
                    var posts = postRepository.FindAll().ToList();
                    posts.Sort((x, y) => y.CreatedAt.CompareTo(x.CreatedAt));
                    var latest = posts.Take(5);
                        
                    foreach (var post in latest)
                    {
                        <li>@Html.ActionLink(post.Title, post.Url)</li>
                    }
                }
            </ul>
        </div>
        <div class="box box_mini">
            <h4>
                Pages</h4>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Index", "Blog")">Blog</a></li>
                <li><a href="@Url.Action("Index", "Preview")">Preview</a></li>
                <li><a href="@Url.Action("Single", "Preview")">Screenshots</a></li>
                <li><a href="@Url.Action("Single", "Preview")">Videos</a></li>
                <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
            </ul>
        </div>
        <div class="box box_mini">
            <h4>
                Miscellaneous</h4>
