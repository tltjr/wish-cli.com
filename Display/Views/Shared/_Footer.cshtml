                <li><a href="contact.php">Contact</a></li>
                <li><a href="@Url.Action("Page", "Home")">Site Map</a></li>
            </ul>
        </div>
        <div class="box box_custom_footer">
            <a href='Home/Contact' class='custom_button ie6fix rounded'><strong>Contact Form</strong><span>get
