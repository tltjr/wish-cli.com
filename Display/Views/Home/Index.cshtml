                        <div id="regbutton">
                            <input type="submit" class="btn primary" id="contact-submit" value="Register" />
                        </div>
                    </div>
                </fieldset>
                </form>
                @*                <h2>
                    This is <strong>display</strong>, a unique Themeforest template for showcasing
                    your work and perfect for any business in need of a stunning website...</h2>*@
            </div>
            <div class="hidden" id="boxes">
                <div style="top: 199.5px; left: 551.5px; display: none;" id="dialog" class="window">
                    @*<div id="description" class="coming">*@
                    <h3 id="header_text">
                    </h3>
                    <p id="paragraph_text">
                    </p>
                    <p>
                        To share with your friends:</p>
                    <div id="sharebuttons">
                        <div class="tweet_to_action" id="tweet_to_action" onclick="window.open('http://www.wil.lt/willet?ca_id=7e2009c2a6714bda','popup','width=550,height=260,scrollbars=no,resizable=no,toolbar=no,directories=no,location=no,menubar=no,status=no,left=0,top=0'); button_clicked();">
                            <div class="title" id="title">
                                Get 15% Off!!
                            </div>
                            <div class="subtitle" id="subtitle">
                                by sharing your love</div>
                            <div id="button_bird" class="bird">
                            </div>
                        </div>
                        <div id="exitoptions">
                            <a id="nothanks" href="">No Thanks. Just register me!</a>
                        </div>
                    </div>
                </div>
                <!-- <a class="cs_import">Email To Friends</a>-->
            </div>
            <!--end infotext-->
            <div id="main">
                <div class="box box_small box1">
                    <img src="@Url.Content("~/Content/images/medium1.jpg")" alt="" />
                    <h3>
                        Navigation</h3>
                    <p>
