<script type="text/javascript">
    $("#home").addClass("current");
</script>
@*<script src="@Url.Content("~/Scripts/contact.js")" type="text/javascript"></script>*@
<script src="@Url.Content("~/Scripts/popup.js")" type="text/javascript"></script>
<script type="text/javascript">
    button_clicked = function () {
        var t, st, tta;
        t = document.getElementById('title');
        t.innerHTML = "Thanks!";
        t.className = "title used";
        st = document.getElementById('subtitle');
        st.innerHTML = "We really appreciate your support!";
        st.className = "subtitle used";
        tta = document.getElementById('tweet_to_action');
        tta.className = "tweet_to_action used";
        tta.onclick = "";
        var email = $("#register").val();
        var url = "Blog/Registered/" + email + "/true";
        $.post(url, function (data) {
            if (data) {
                window.location.href = "Blog/Registered";
            }
        });
    }
</script>
<script type="text/javascript">
    $('#nothanks').click(function (e) {
        e.preventDefault();
        var email = $("#register").val();
        var url = "Blog/Registered/" + email + "/false";
        $.post(url, function (data) {
            if (data) {
                window.location.href = "Blog/Registered";
            }
        });
    });
</script>
