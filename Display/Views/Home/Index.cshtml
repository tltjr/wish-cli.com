    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*/Home/Index*@
<body id='frontpage'>
    <div class='wrapper'>
        <div id="top">
            @Html.Partial("_Head")
            <div id="featured">
                <div id="featured_image">
                    <img src="@Url.Content("~/Content/images/split-pane.png")" alt="" class='current_img' />
